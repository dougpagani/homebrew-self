#!/usr/bin/env bash

ineed() {
  # https://superuser.com/a/1050650
  echo -en $(echo \
      $(curl -s "https://packages.debian.org/search?suite=default&section=all&arch=any&searchon=contents&keywords=$1") \
         | sed 's%</*tr>%\\n%g') \
      | grep 'class="file"' \
      | sed 's/<[^>]*>//g' \
      | column -t \
      | grep --color -i -w "$1"
}
echo "These suggestions are generated by stealing debian's package database info."
echo "... homebrew has no authoritative way of asking for end-binaries, and in fact, coreutils for example uses a loop to just dump all compiled binaries via symlink into the install-target"
echo
ineed "$1"
